{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "autosize": "pad",
    "padding": 5,
    "width": 500,
    "height": 300,
    "style": "cell",
    "data": [
        {
            "name": "source_1",
            "url": "data/unemployment.tsv",
            "format": {
                "type": "tsv"
            }
        },
        {
            "name": "source_0",
            "url": "data/us-10m.json",
            "format": {
                "type": "topojson",
                "feature": "counties"
            },
            "transform": [
                {
                    "type": "lookup",
                    "from": "source_1",
                    "key": "id",
                    "fields": [
                        "id"
                    ],
                    "values": [
                        "rate"
                    ]
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"rate\"])",
                    "as": "rate"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"rate\"] !== null && !isNaN(datum[\"rate\"])"
                }
            ]
        }
    ],
    "projections": [
        {
            "name": "projection",
            "size": {
                "signal": "[width, height]"
            },
            "fit": {
                "signal": "data('source_0')"
            },
            "type": "albersUsa"
        }
    ],
    "marks": [
        {
            "name": "marks",
            "type": "shape",
            "style": [
                "geoshape"
            ],
            "from": {
                "data": "source_0"
            },
            "encode": {
                "update": {
                    "fill": {
                        "scale": "color",
                        "field": "rate"
                    },
                    "opacity": {
                        "value": 0.7
                    }
                }
            },
            "transform": [
                {
                    "type": "geoshape",
                    "projection": "projection"
                }
            ]
        }
    ],
    "scales": [
        {
            "name": "color",
            "type": "sequential",
            "domain": {
                "data": "source_0",
                "field": "rate"
            },
            "range": "heatmap",
            "nice": false,
            "zero": false
        }
    ],
    "legends": [
        {
            "fill": "color",
            "title": "rate",
            "type": "gradient",
            "encode": {
                "gradient": {
                    "update": {
                        "opacity": {
                            "value": 0.7
                        }
                    }
                }
            }
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
