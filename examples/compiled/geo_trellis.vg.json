{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "autosize": "pad",
    "padding": 5,
    "data": [
        {
            "name": "source_1",
            "url": "data/us-10m.json",
            "format": {
                "type": "topojson",
                "feature": "states"
            }
        },
        {
            "name": "source_0",
            "url": "data/income.json",
            "format": {
                "type": "json",
                "parse": {
                    "pct": "number"
                }
            },
            "transform": [
                {
                    "type": "lookup",
                    "from": "source_1",
                    "key": "id",
                    "fields": [
                        "id"
                    ],
                    "as": [
                        "geo"
                    ]
                },
                {
                    "type": "geojson",
                    "geojson": "geo",
                    "signal": "child_geojson"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"pct\"] !== null && !isNaN(datum[\"pct\"])"
                }
            ]
        },
        {
            "name": "row_domain",
            "source": "source_0",
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": [
                        "group"
                    ]
                }
            ]
        }
    ],
    "projections": [
        {
            "name": "projection",
            "size": {
                "signal": "[child_width, child_height]"
            },
            "fit": {
                "signal": "child_geojson"
            },
            "type": "albersUsa"
        }
    ],
    "signals": [
        {
            "name": "child_width",
            "value": 500
        },
        {
            "name": "child_height",
            "value": 300
        }
    ],
    "layout": {
        "padding": {
            "row": 10,
            "column": 10
        },
        "offset": 10,
        "columns": 1,
        "bounds": "full",
        "align": "all"
    },
    "marks": [
        {
            "name": "row_title",
            "role": "row-title",
            "type": "group",
            "marks": [
                {
                    "type": "text",
                    "role": "row-title-text",
                    "style": "guide-title",
                    "encode": {
                        "update": {
                            "align": {
                                "value": "center"
                            },
                            "text": {
                                "value": "group"
                            },
                            "angle": {
                                "value": 270
                            }
                        }
                    }
                }
            ]
        },
        {
            "name": "row_header",
            "type": "group",
            "role": "row-header",
            "from": {
                "data": "row_domain"
            },
            "sort": {
                "field": "datum[\"group\"]",
                "order": "ascending"
            },
            "title": {
                "text": {
                    "signal": "''+parent[\"group\"]"
                },
                "offset": 10,
                "orient": "left",
                "style": "guide-label",
                "encode": {
                    "update": {
                        "align": {
                            "value": "right"
                        },
                        "baseline": {
                            "value": "middle"
                        }
                    }
                }
            },
            "encode": {
                "update": {
                    "height": {
                        "signal": "child_height"
                    }
                }
            }
        },
        {
            "name": "cell",
            "type": "group",
            "style": "cell",
            "from": {
                "facet": {
                    "name": "facet",
                    "data": "source_0",
                    "groupby": [
                        "group"
                    ]
                }
            },
            "sort": {
                "field": [
                    "datum[\"group\"]"
                ],
                "order": [
                    "ascending"
                ]
            },
            "encode": {
                "update": {
                    "width": {
                        "signal": "child_width"
                    },
                    "height": {
                        "signal": "child_height"
                    }
                }
            },
            "marks": [
                {
                    "name": "child_marks",
                    "type": "shape",
                    "style": [
                        "geoshape"
                    ],
                    "from": {
                        "data": "facet"
                    },
                    "encode": {
                        "update": {
                            "fill": {
                                "scale": "color",
                                "field": "pct"
                            },
                            "opacity": {
                                "value": 0.7
                            }
                        }
                    },
                    "transform": [
                        {
                            "type": "geoshape",
                            "projection": "projection",
                            "field": "datum[\"geo\"]"
                        }
                    ]
                }
            ]
        }
    ],
    "scales": [
        {
            "name": "color",
            "type": "sequential",
            "domain": {
                "data": "source_0",
                "field": "pct"
            },
            "range": "heatmap",
            "nice": false,
            "zero": false
        }
    ],
    "legends": [
        {
            "fill": "color",
            "title": "pct",
            "type": "gradient",
            "encode": {
                "gradient": {
                    "update": {
                        "opacity": {
                            "value": 0.7
                        }
                    }
                }
            }
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
