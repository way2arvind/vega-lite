{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "autosize": "pad",
    "padding": 5,
    "width": 500,
    "height": 300,
    "data": [
        {
            "name": "source_0",
            "url": "data/population_engineers_hurricanes.csv",
            "format": {
                "type": "csv"
            }
        },
        {
            "name": "source_1",
            "url": "data/us-10m.json",
            "format": {
                "type": "topojson",
                "feature": "states"
            }
        },
        {
            "name": "data_0",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"population\"])",
                    "as": "population"
                },
                {
                    "type": "lookup",
                    "from": "source_1",
                    "key": "id",
                    "fields": [
                        "id"
                    ],
                    "as": [
                        "geo"
                    ]
                },
                {
                    "type": "geojson",
                    "geojson": "geo",
                    "signal": "child_population_geojson"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"population\"] !== null && !isNaN(datum[\"population\"])"
                }
            ]
        },
        {
            "name": "data_1",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"engineers\"])",
                    "as": "engineers"
                },
                {
                    "type": "lookup",
                    "from": "source_1",
                    "key": "id",
                    "fields": [
                        "id"
                    ],
                    "as": [
                        "geo"
                    ]
                },
                {
                    "type": "geojson",
                    "geojson": "geo",
                    "signal": "child_engineers_geojson"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"engineers\"] !== null && !isNaN(datum[\"engineers\"])"
                }
            ]
        },
        {
            "name": "data_2",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"hurricanes\"])",
                    "as": "hurricanes"
                },
                {
                    "type": "lookup",
                    "from": "source_1",
                    "key": "id",
                    "fields": [
                        "id"
                    ],
                    "as": [
                        "geo"
                    ]
                },
                {
                    "type": "geojson",
                    "geojson": "geo",
                    "signal": "child_hurricanes_geojson"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"hurricanes\"] !== null && !isNaN(datum[\"hurricanes\"])"
                }
            ]
        }
    ],
    "projections": [
        {
            "name": "projection",
            "size": {
                "signal": "[width, height]"
            },
            "fit": {
                "signal": "[child_population_geojson, child_engineers_geojson, child_hurricanes_geojson]"
            },
            "type": "albersUsa"
        }
    ],
    "layout": {
        "padding": {
            "row": 10,
            "column": 10
        },
        "offset": 10,
        "columns": 1,
        "bounds": "full",
        "align": "all"
    },
    "marks": [
        {
            "type": "group",
            "name": "child_population_group",
            "style": "cell",
            "encode": {
                "update": {
                    "width": {
                        "signal": "width"
                    },
                    "height": {
                        "signal": "height"
                    }
                }
            },
            "marks": [
                {
                    "name": "child_population_marks",
                    "type": "shape",
                    "style": [
                        "geoshape"
                    ],
                    "from": {
                        "data": "data_0"
                    },
                    "encode": {
                        "update": {
                            "fill": {
                                "scale": "child_population_color",
                                "field": "population"
                            },
                            "opacity": {
                                "value": 0.7
                            }
                        }
                    },
                    "transform": [
                        {
                            "type": "geoshape",
                            "projection": "projection",
                            "field": "datum[\"geo\"]"
                        }
                    ]
                }
            ],
            "legends": [
                {
                    "fill": "child_population_color",
                    "title": "population",
                    "type": "gradient",
                    "encode": {
                        "gradient": {
                            "update": {
                                "opacity": {
                                    "value": 0.7
                                }
                            }
                        }
                    }
                }
            ]
        },
        {
            "type": "group",
            "name": "child_engineers_group",
            "style": "cell",
            "encode": {
                "update": {
                    "width": {
                        "signal": "width"
                    },
                    "height": {
                        "signal": "height"
                    }
                }
            },
            "marks": [
                {
                    "name": "child_engineers_marks",
                    "type": "shape",
                    "style": [
                        "geoshape"
                    ],
                    "from": {
                        "data": "data_1"
                    },
                    "encode": {
                        "update": {
                            "fill": {
                                "scale": "child_engineers_color",
                                "field": "engineers"
                            },
                            "opacity": {
                                "value": 0.7
                            }
                        }
                    },
                    "transform": [
                        {
                            "type": "geoshape",
                            "projection": "projection",
                            "field": "datum[\"geo\"]"
                        }
                    ]
                }
            ],
            "legends": [
                {
                    "fill": "child_engineers_color",
                    "title": "engineers",
                    "type": "gradient",
                    "encode": {
                        "gradient": {
                            "update": {
                                "opacity": {
                                    "value": 0.7
                                }
                            }
                        }
                    }
                }
            ]
        },
        {
            "type": "group",
            "name": "child_hurricanes_group",
            "style": "cell",
            "encode": {
                "update": {
                    "width": {
                        "signal": "width"
                    },
                    "height": {
                        "signal": "height"
                    }
                }
            },
            "marks": [
                {
                    "name": "child_hurricanes_marks",
                    "type": "shape",
                    "style": [
                        "geoshape"
                    ],
                    "from": {
                        "data": "data_2"
                    },
                    "encode": {
                        "update": {
                            "fill": {
                                "scale": "child_hurricanes_color",
                                "field": "hurricanes"
                            },
                            "opacity": {
                                "value": 0.7
                            }
                        }
                    },
                    "transform": [
                        {
                            "type": "geoshape",
                            "projection": "projection",
                            "field": "datum[\"geo\"]"
                        }
                    ]
                }
            ],
            "legends": [
                {
                    "fill": "child_hurricanes_color",
                    "title": "hurricanes",
                    "type": "gradient",
                    "encode": {
                        "gradient": {
                            "update": {
                                "opacity": {
                                    "value": 0.7
                                }
                            }
                        }
                    }
                }
            ]
        }
    ],
    "scales": [
        {
            "name": "child_population_color",
            "type": "sequential",
            "domain": {
                "data": "data_0",
                "field": "population"
            },
            "range": "heatmap",
            "nice": false,
            "zero": false
        },
        {
            "name": "child_engineers_color",
            "type": "sequential",
            "domain": {
                "data": "data_1",
                "field": "engineers"
            },
            "range": "heatmap",
            "nice": false,
            "zero": false
        },
        {
            "name": "child_hurricanes_color",
            "type": "sequential",
            "domain": {
                "data": "data_2",
                "field": "hurricanes"
            },
            "range": "heatmap",
            "nice": false,
            "zero": false
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
